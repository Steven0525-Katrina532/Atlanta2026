  <style>
    body{font-family:ui-sans-serif,system-ui,Segoe UI,Roboto,Arial;margin:0;background:#f8fafc}
    .wrap{max-width:520px;margin:10vh auto;padding:24px;border:1px solid #e2e8f0;border-radius:16px;background:#fff}
    h1{margin:0 0 8px}
    .row{display:flex;gap:8px;align-items:center}
    input,button{width:100%;padding:10px;border:1px solid #cbd5e1;border-radius:8px}
    button{cursor:pointer}
    .error{color:#b91c1c;margin-top:8px}
    .muted{color:#64748b;margin-top:8px}
